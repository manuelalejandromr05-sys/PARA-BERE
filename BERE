    <script>
        function verificar() {
            const pass = document.getElementById("pass").value;
            if(pass === "29/05/2023") {
                document.getElementById("lock").style.display = "none";
                document.getElementById("contenido").style.display = "block";
            } else {
                alert("Fecha incorrecta üíî");
            }
        }

        const fechaInicio = new Date(2023, 4, 29); 

        function actualizar() {
            const ahora = new Date();
            const diff = ahora - fechaInicio;

            const diasTotales = Math.floor(diff / (1000 * 60 * 60 * 24));
            const horas = Math.floor((diff / (1000 * 60 * 60)) % 24);
            const minutos = Math.floor((diff / (1000 * 60)) % 60);
            const segundos = Math.floor((diff / 1000) % 60);

            document.getElementById("contador").innerHTML = 
                `üåπ ${diasTotales} d√≠as juntos<br>` +
                `<small>${horas}h ${minutos}m ${segundos}s</small>`;
        }
        setInterval(actualizar, 1000);
        actualizar();

        function abrirCarta() {
            document.getElementById("mensaje").style.display = "block";
            document.getElementById("texto-sobre").style.display = "none";
        }

        function crearCorazon() {
            const h = document.createElement("div");
            h.classList.add("heart");
            h.innerHTML = "‚ù§Ô∏è";
            h.style.left = Math.random() * 100 + "vw";
            h.style.fontSize = (Math.random() * 20 + 10) + "px";
            h.style.animationDuration = (Math.random() * 3 + 4) + "s";
            document.body.appendChild(h);
            setTimeout(() => h.remove(), 6000);
        }
        setInterval(crearCorazon, 500);
    </script>
